<%- include('partials/header') -%> 
  <h1>Compose</h1>
  <form class="" action="/compose" method="POST">
    <div class="form-group">
      <label class="form-label" for="postTitle">Title</label>
      <input class="form-control" type="text" name="postTitle">
      <br>
      <label for="textArea" class="form-label">Post</label>
      <textarea class="form-control" name="postBody" cols="50" rows="4"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
<%- include('partials/footer') -%>